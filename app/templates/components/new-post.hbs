{{#if addNewPost}}
  <h1>New Post</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title"></label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="blog"></label>
        {{input value=blog id="blog"}}
      </div>
      <button {{action 'savePost'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'postFormShow'}}>New Post</button>
{{/if}}
